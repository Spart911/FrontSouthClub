{
  "name": "site-lamp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --config vite.config.prod.ts",
    "build:analyze": "npm run build && node scripts/analyze-bundle.js",
    "build:stats": "npm run build && echo '📊 Откройте dist/stats.html для детального анализа'",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --host",
    "vercel-build": "npm run build",
    "deploy": "vercel deploy --prod"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@supabase/supabase-js": "^2.49.7",
    "@types/styled-components": "^5.1.34",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/swiper": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.0.0",
    "terser": "^5.40.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vercel": "^42.3.0",
    "vite": "^5.1.6",
    "vite-plugin-compression2": "^1.4.0"
  }
}
